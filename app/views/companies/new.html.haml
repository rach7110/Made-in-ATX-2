%h1 Add a Company
%br

= form_for(@company) do |l|
	- if @company.errors.any?
		%h2= pluralize(@company.errors.count, "error") + " prohibited this link from being saved:"
		%br
		%ul.error
			- @company.errors.full_messages.each do |msg|
				%li= msg
	%br

	.field
		= l.label :name
	.field
		= l.text_field :name
		%br
		%br
		
	.field
		= l.label :address1, "Address"
	.field
		= l.text_field :address1
		%br
		%br
		
	.field
		= l.label :website
	.field
		= l.text_field :website
		%br
		%br

	.field
		= l.label :description, "Description: add 1-3 sentence description"
	.field
		= l.text_area :description, :cols => "60", :rows => "10"
		%br

	.actions= l.submit "Submit"